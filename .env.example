# Environment
NODE_ENV=development

# Server
PORT=3000

# Database (Local Development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=countries_cities_db
DB_USER=postgres
DB_PASSWORD=your_password

# Database (Production/Cloud - Render.com, Heroku, etc.)
# Uncomment and use this for cloud deployments
# DATABASE_URL=postgresql://user:password@host:5432/database

# Redis (Local Development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_ENABLED=false
REDIS_TLS=false

# Redis (Production/Cloud - Upstash)
# Uncomment and use this for cloud deployments
# REDIS_URL=https://your-upstash-redis-url.upstash.io
# REDIS_TOKEN=your_upstash_redis_token
# REDIS_ENABLED=true

# JWT
JWT_SECRET=your_super_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_secret_key_change_this_in_production
JWT_REFRESH_EXPIRES_IN=30d

# API Configuration
API_VERSION=v1
ITEMS_PER_PAGE=20
MAX_ITEMS_PER_PAGE=100

# CORS
CORS_ORIGIN=*
